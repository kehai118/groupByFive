<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--sessionManager session管理器-->
    <bean id="sessionManager"
          class="org.apache.shiro.web.session.mgt.DefaultWebSessionManager">
        <!--删除无效session-->
        <property name="deleteInvalidSessions" value="true"></property>
        <!--设置session超时时间-->
        <property name="globalSessionTimeout" value="3000000"></property>
    </bean>

    <!--设置加密方式-->
    <bean id="credentialsMatcher"
          class="org.apache.shiro.authc.credential.HashedCredentialsMatcher">

        <!--加密次数-->
        <property name="hashIterations" value="1024"></property>
        <!--加密算法-->
        <property name="hashAlgorithmName" value="MD5"></property>
    </bean>
    <!--配置realm-->
    <bean id="customRealm" class="com.second.shiro.CustomRealm">
        <!--注入加密方式-->
        <property name="credentialsMatcher" ref="credentialsMatcher"></property>
    </bean>

    <!--配置安全管理器-->
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <!--注入realm-->
        <property name="realm" ref="customRealm"></property>
        <!--注入session管理器-->
        <property name="sessionManager" ref="sessionManager"></property>
    </bean>

    <!--id值需与web.xml中的设置的beanName一致-->
    <bean id="shiroFilter"
          class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <!--注入安全管理器-->
        <property name="securityManager" ref="securityManager"></property>
        <!--配置登录页面地址,如果用户没有登录，则会默认跳转到该地址-->
        <property name="loginUrl" value="/admin/toLogin"></property>
        <!--配置过滤器，即过滤规则 anon 为不需要登录的请求 authc为需要权限验证-->
        <property name="filterChainDefinitions">
            <value>
                /js/**=anon
                /css/**=anon
                /images/**=anon
                /fonts/**=anon
                /admin/toLogin=anon
                /admin/login =anon
                /admin/toAdd=anon
                /admin/add=anon
                /**=anon
            </value>
        </property>
    </bean>
</beans>